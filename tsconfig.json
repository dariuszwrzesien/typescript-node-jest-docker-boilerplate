{
  "compilerOptions": {
    "target": "es2017",
    "types": ["node", "jest"],
    "rootDir": ".",
    "outDir": "build/dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "alwaysStrict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
