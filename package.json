{
  "name": "typescript-node-jest-docker-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate of typescript, node, jest, docker",
  "engines": {
    "node": ">= 10.13 <11"
  },
  "scripts": {
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "nodemon-watch": "nodemon build/dist/src/main.js --inspect=0.0.0.0:9229",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dariuszwrzesien/typescript-node-jest-docker-boilerplate"
  },
  "author": "Dariusz WrzesieÅ„",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "jest": "~23.6.0",
    "nodemon": "^1.17.3",
    "ts-jest": "~23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "~5.11.0",
    "tslint-microsoft-contrib": "~6.0.0",
    "tsutils": "~3.5.2",
    "typescript": "~3.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/src/.*|(\\.|/)(test|spec))\\.(ts|js)x?$",
    "coverageDirectory": "./build/coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.test.ts"
    ]
  }
}
